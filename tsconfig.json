{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    // "sourceMap": true,
    "declaration": true,
    // "declarationMap": true,
    // "emitDeclarationOnly": true,
    "outDir": "temp",
    // "outFile": "index.d.ts",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}