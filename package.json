{
  "private": true,
  "version": "0.0.0-development",
  "description": "Vue 3 rich text editor",
  "homepage": "https://vueup.github.io/vue-quill/",
  "bugs": "https://github.com/vueup/vue-quill/issues",
  "license": "MIT",
  "author": "Ahmad Luthfi Masruri",
  "funding": [
    {
      "type": "individual",
      "url": "https://www.buymeacoffee.com/luthfimasruri"
    }
  ],
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vueup/vue-quill.git"
  },
  "types": "test-dts/index.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "ts-node scripts/verifyCommit.ts"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "dev": "npx ts-node scripts/dev.ts",
    "build": "npx ts-node scripts/build.ts",
    "size": "npx ts-node scripts/build.ts vue-quill size-check -p -f global",
    "lint": "eslint --ext .ts packages/*/src/**/*.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "release": "npx ts-node scripts/release.ts",
    "assets:dev": "npx ts-node scripts/devAssets.ts",
    "assets:build": "npx ts-node scripts/buildAssets.ts",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.8.1",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@semantic-release/exec": "^5.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/puppeteer": "^5.4.3",
    "@types/quill": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "brotli": "^1.3.2",
    "chalk": "^4.1.0",
    "csso": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.23.0",
    "eslint-plugin-vue": "^7.8.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "lint-staged": "^10.5.4",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "pascalcase": "^1.0.0",
    "prettier": "^2.2.1",
    "puppeteer": "^8.0.0",
    "rollup": "^2.44.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.2",
    "semver": "^7.3.5",
    "serve": "^11.3.2",
    "stylus": "^0.54.8",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "vue": "^3.0.10",
    "yorkie": "^2.0.0",
    "zlib": "^1.0.5"
  }
}
